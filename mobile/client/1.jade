template(name='layout')
    +chosen
    +yield
    +nav

template(name='login')
    button#facebook-login(class="btn btn-default") login with facebook

template(name='chat')
    #x-chat-wrapper0
        #x-chat-container0
            each chats
                #x-chat-line0 {{text}}
            #x-chat-photo0
                img#x-chat-image0(src="spark1.jpg")  
